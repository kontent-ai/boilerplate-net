@model IEnumerable<Kentico.Kontent.Boilerplate.Models.ContentTypes.Article>
@{
    ViewData["Title"] = "Home Page";
}
<div class="header clearfix">
    <nav>
        <ul class="nav nav-pills pull-right">
            <li role="presentation" class="active"><a href="/">Home</a></li>
            <li role="presentation"><a href="https://kontent.ai/" target="_blank">Kentico Kontent</a></li>
            <li role="presentation"><a href="https://app.kontent.ai/sign-up" target="_blank">Sign up</a></li>
        </ul>
    </nav>
    <h3 class="text-muted">Kentico Kontent Boilerplate</h3>
